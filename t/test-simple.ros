#!/bin/sh
#|-*- mode:lisp -*-|#
#|
exec ros -Q -- $0 "$@"
|#
(progn ;;init forms
  (ros:ensure-asdf)
  #+quicklisp (ql:quickload '(live-reload) :silent t)
  )

(defpackage :ros.script.test.3740546449
  (:use :cl))
(in-package :ros.script.test.3740546449)

(defparameter *test-file*
  (merge-pathnames #p"t/test-simple.html"
                   (asdf:system-source-directory  :live-reload)))

(defparameter  *static-directory*
  (merge-pathnames #p"t/"
                   (asdf:system-source-directory  :live-reload)))

(defun main (&rest argv)
  (declare (ignorable argv))
  (clack:clackup
   (lack:builder
    :accesslog
    (lambda (app)
      (live-reload:run-thread)
      (lambda (env)
        (if (equal (getf env :path-info) "/livereload")
            (live-reload-ws:start-live-reload-ws env)
            (destructuring-bind (&whole w code headers result) (funcall app env)
              (declare (ignore code headers))
              (typecase result
                (pathname (live-reload:add result (getf env :path-info))))
              w))))
    (:static :path
             (lambda (path)
               (if (ppcre:scan "^.*(html|png|css|js|ico)$" path)
                   path
                   nil))
             :root *static-directory*)
    (lambda (env)
      (declare (ignore env))
      `(200 (:content-type "text/html")
            ,*test-file*)))
   :use-thread nil))

